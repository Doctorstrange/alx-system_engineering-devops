#!/usr/bin/env bash
# Nginx server to have a custom 404 page
sudo apt update
sudo apt install -y nginx

sudo ufw allow 'Nginx HTTP'
echo "Holberton School" > /var/www/html/index.html
echo "Ceci n'est pas une page" > /var/www/html/404.html
sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.github.com permanent;' /etc/nginx/sites-available/default
sed -i '/listen 80 default_server/a \\terror_page 404 /404.html;' /etc/nginx/sites-available/default

sudo nginx -t

sudo service nginx restart
