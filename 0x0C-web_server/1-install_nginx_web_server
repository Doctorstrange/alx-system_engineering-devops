#!/usr/bin/env bash
# Bash script that configures a new Ubuntu machine 
sudo apt update
sudo su apt install -y nginx

sudo su bash -c 'cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80;
    # other configurations...

    location / {
        return 200 "Hello World!";
    }
}
EOF'

sudo su mkdir -p /run/nginx

sudo su touch /run/nginx/nginx.pid

sudo su nginx -s reload
