#!/usr/bin/env bash
# script to fix docker

cat <<EOF > index.html
<!DOCTYPE html>
<html>
<head>
  <title>Hello Holberton</title>
</head>
<body>
  <h1>Hello Holberton</h1>
</body>
</html>
EOF

cat <<EOF > Dockerfile
FROM holbertonschool/265-0
RUN apt-get update && apt-get install -y apache2
COPY index.html /var/www/html/
EXPOSE 80
EOF

docker build -t my-custom-image .

docker run -p 8080:80 -d my-custom-image
